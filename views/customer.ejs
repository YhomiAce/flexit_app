<%- include("./partials/navbar") %> 
<%- include("./partials/sidebar") %> 

<div class="main-panel">
  <%- include("./partials/alerts") %> 
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card border-primary">
                <div class="card-header">
                    <h4 class="text-center text-primary float-left">Available Customer</h4>
                    <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#newCustomer">
                      Log New Customer
                    </button>
                </div>
                <div class="card-body">
                  
                  
                  <!-- Modal -->
                  <div class="modal fade" id="newCustomer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="text-center">Log In Customer</h5>  
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                               
                          <form action="/new-customer" method="POST">
                              <div class="form-group">
                                  <label for="">Customer Name</label>
                                  <input type="text" name="name" class="form-control">
                              </div>
                              <div class="form-group">
                                <label for="">Customer Email</label>
                                <input type="text" name="email" class="form-control">
                            </div>
                            <div class="form-group">
                              <label for="">Customer Phone</label>
                              <input type="text" name="phone" class="form-control">
                            </div>
                            <div class="form-group">
                              <label for="">Purpose</label>
                              <textarea name="purpose" class="form-control" cols="10" rows="5"></textarea>
                            </div>
                              <button type="submit" class="btn btn-primary">Log User In</button>
                          </form>
                        </div>
                        
                      </div>
                    </div>
                  </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                          <thead>
                            <tr>
                              <th>ID</th>
                              <th>Name</th>
                              <th>Phone</th>
                              <th>Email</th>
                              <th>Status</th>
                              <th>Time In</th>
                            </tr>
                          </thead>
                          <tbody>
                              <% for (let i = 0; i < customers.length; i++ ) { %> 
                              <tr>
                                <td><%= i+1 %> </td>
                                <td> <%= customers[i].name %>  </td>
                                <td> <%= customers[i].phone %>  </td>
                                <td> <%= customers[i].email %>  </td>
                                <td> <%= customers[i].status %>  </td>
                                <td><%= moment(customers[i].createdAt).format("DD-MMM-YYYY, h:mm a")  %> </td>
                              </tr>
                              <% } %> 
                            
                            
                          </tbody>
                        </table>
                      </div>
                </div>
            </div>
        </div>
      </div>
      
    </div>
</div>
<%- include("./partials/footer") %> 
<script>
  $('table').DataTable({
      order:[0,'desc']
  })
</script>
