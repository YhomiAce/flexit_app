<%- include("./partials/navbar") %> 
<%- include("./partials/sidebar") %> 

<div class="main-panel">
  <%- include("./partials/alerts") %> 
    <div class="content-wrapper">
      <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center text-success">Settings</h4>
                    
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs center" id="myTab2" role="tablist">
                       
                        <li class="nav-item">
                            <a class="nav-link" id="contact-tab2" data-toggle="tab" href="#contact2" role="tab"
                                aria-controls="contact" aria-selected="true">Change Password</a>
                        </li>
                        
                    </ul>
                    <div class="tab-content tab-bordered" id="myTab3Content">

                        
                        <div class="tab-pane fade show active" id="contact2" role="tabpanel" aria-labelledby="contact-tab2">
                            <div class="row">
                                <div class="col-12 col-md-12 col-lg-12">
                                    <form action="/update-password" method="POST" class="needs-validation"
                                        novalidate="">
                                        <div class="form-group">
                                            <label for="oldPassword">Current Password</label>
                                            <input id="oldPassword" type="password" class="form-control"
                                                name="oldPassword" tabindex="1" required autofocus>
                                            
                                        </div>
                                        <div class="form-group">
                                            <label for="password">New Password</label>
                                            <input id="password" type="password" class="form-control"
                                                name="password" tabindex="1" required autofocus>
                                           
                                        </div>
                                        <div class="form-group">
                                            <label for="confirmPassword">Confirm Password</label>
                                            <input id="confirmPassword" type="password" class="form-control"
                                                name="confirmPassword" tabindex="1" required autofocus>
                                            
                                        </div>
                                        <div class="form-group">
                                            <button class="btn btn-primary mr-1" type="submit">Submit</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                        

                    </div>
                    
                    
                </div>
            </div>
        </div>
      </div>
      
    </div>
</div>
<%- include("./partials/footer") %> 

